<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :model %>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :mileage %>
    <%= f.number_field :mileage %>
  </div>
  <div class="field">
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :startprize %>
    <%= f.number_field :startprize %>
  </div>
  <div class="field">
    <%= f.label :duration %>
    <%= f.datetime_select :duration,{ :order => [:day, :month, :year, :hour,:minute], :start_year => Time.now.year }, {:class => 'date-select'}%>  </div>
  

  
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  
  <%= f.hidden_field :creator, :value => session[:current_user_id] %>
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
