<h2>Listing cars</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Brand</th>
      <th>Current Bid</th>
      <th>Duration</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>


      <tr>
        <td><%= car.title %></td>
        <td><%= car.brand %></td>
        <td><%= car.startprize %></td>
        <% if DateTime.now > car.duration %>
            <td>expired</td>
        <% else %>

        <td><%= car.duration %></td>
        <% end %>
		
<% if session[:current_user_id] == car.creator %>
 <td class="show"><%= link_to 'Show', car %></td>
 <td><%= link_to 'Edit', edit_car_path(car) %></td>
 <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% else %>
 <td class="show"><%= link_to 'Show', car %></td>
 <td>-</td>
 <td>-</td>
<% end %>		
		
		
		
		
      </tr>
    <% end %>
  </tbody>
</table>

<h2><%= link_to "Add a new car", new_car_path %><h2>

